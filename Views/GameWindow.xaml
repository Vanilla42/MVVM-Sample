<Window x:Class="MVVM_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Sample"
        xmlns:vm="clr-namespace:MVVM_Sample.ViewModels"
        mc:Ignorable="d"
        
        Title="Game" Height="400" Width="400" ResizeMode="NoResize" SnapsToDevicePixels="True">

    <!--d:DataContext="{d:DesignInstance Type=local:MainPageData}"-->

    <Window.DataContext>
        <vm:GameViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="node00" Grid.Column="0" Grid.Row="0"
                Content="{Binding Numbers}"
                />

    </Grid>
</Window>
